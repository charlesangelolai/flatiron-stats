<%= form_with model: cohort, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :program %>
    <%= f.text_field :program, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :pace %>
    <%= f.select :pace, options_for_select(["Full-Time", "Part-Time"], cohort.time.to_s), { include_blank: "Select Time" }, { class: "form-select mb-1" } %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(["approved", "pending"], cohort.status.to_s ), { include_blank: "Select Status" }, { class: "form-select mb-1" } %>
  </div>
  <%= f.submit button_name, class: "btn btn-dark mt-3" %>
<% end %>