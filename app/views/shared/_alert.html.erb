<% type = "info" if local_assigns[:type].nil? %>
<% title = "" if local_assigns[:title].nil? %>
<% content = "content" if local_assigns[:content].nil? %>
<% dismissible = true if local_assigns[:dismissible].nil? %>

<% flash.each do |type, content| %>
  <div class="alert <%= alert_class_by_type(type) %> <% if dismissible == true %>alert-dismissible<% end %> fade show" role="alert">
    <% if dismissible == true %>
      <%= content %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <% end %>
  </div>
<% end %>